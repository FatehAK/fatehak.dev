---
import { getPicture } from '@astrojs/image';
import { warnForMissingAlt } from '@astrojs/image/components';

const {
  src,
  alt,
  sizes,
  widths,
  aspectRatio,
  fit,
  background,
  position,
  formats = ['avif', 'webp'],
  loading = 'lazy',
  decoding = 'async',
  ...attrs
} = Astro.props;

if (alt === undefined || alt === null) {
  warnForMissingAlt();
}

const { image, sources } = await getPicture({
  src,
  widths,
  formats,
  aspectRatio,
  fit,
  background,
  position,
  alt,
});
---

<picture>
  {sources.map(attrs => <source {...attrs} {sizes} />)}
  <img {...image} {loading} {decoding} alt={alt} {...attrs} />
</picture>
