---
import { getCollection } from 'astro:content';
import PageLayout from 'layouts/PageLayout.astro';
import PageSEO from 'components/PageSEO.astro';
import Heading from 'components/Heading.astro';
import PostList from 'components/PostList.astro';

const postEntries = await getCollection('blog', ({ data }) => data.draft !== true);

const sortedPosts = postEntries.sort(
  (a, b) => new Date(b.data.publishDate).valueOf() - new Date(a.data.publishDate).valueOf()
);
---

<PageLayout>
  <PageSEO title="Blog" slot="seo" />
  <Heading text="My" gradientText="Blog" />
  <PostList posts={sortedPosts} />
</PageLayout>
