---
const { posts } = Astro.props;
---

{
  posts.map((post, index) => (
    <div
      class:list={['post pt-3 pb-4 border-b border-bg-border', { 'mb-3': index !== posts.length - 1 }]}
      style={`animation-delay: ${index * 0.08}s`}
    >
      <a class="unset" href={post.path}>
        <h2 class="mb-1 text-[1.18rem] font-[500] transition-colors duration-200">{post.title}</h2>
        <div class="text-sm text-text-body/[56%]">
          <span>{post.date}</span>
          <span class="mx-1 text-text-body/20">â€¢</span>
          <span>{post.readingTime}</span>
        </div>
      </a>
    </div>
  ))
}

<style>
  .post {
    opacity: 0;
    animation: fadein 0.8s ease forwards;
  }

  @media (hover: hover) and (pointer: fine) {
    .post a:hover > h2 {
      color: theme('colors.primary.DEFAULT');
    }
  }
</style>
