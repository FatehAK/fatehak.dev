<article class="prose">
  <slot />
</article>

<style>
  .prose > :global(:first-child) {
    margin-top: 0;
  }

  /*
   * BLOCK ELEMENTS - START
  */
  .prose :global(h2) {
    margin-top: 1.8em;
    margin-bottom: 1em;
    line-height: 1.33;

    &.sr-only {
      margin: 0;
    }
  }

  .prose :global(h3) {
    margin-top: 1.5em;
    margin-bottom: 0.6em;
    line-height: 1.6;
  }

  .prose :global(h4) {
    margin-top: 1.4em;
    margin-bottom: 0.5em;
    line-height: 1.5;
  }

  .prose :global(hr) {
    margin-top: 3em;
    margin-bottom: 3em;
    border-color: theme('colors.bg.border');
  }

  .prose :global(figure),
  .prose :global(.video-container) {
    margin-top: 2em;
    margin-bottom: 2em;

    & > :global(figcaption p),
    & > :global(.video-caption p) {
      margin: 0;
    }
  }

  .prose :global(aside) {
    margin-top: 1.6em;
    margin-bottom: 1.6em;

    &.info > :global(blockquote > p:first-child),
    &.info > :global(blockquote > div:first-child) {
      margin-top: 0;
    }

    &.info > :global(blockquote > p:last-child),
    &.info > :global(blockquote > div:last-child) {
      margin-bottom: 0;
    }
  }

  .prose :global(div[data-rehype-pretty-code-fragment]) {
    margin-top: 1.5em;
    margin-bottom: 1.5em;
  }

  .prose :global(hr + *),
  .prose :global(h2 + *),
  .prose :global(h3 + *),
  .prose :global(h4 + *) {
    margin-top: 0;
  }

  /*
   * BLOCK ELEMENTS - END
  */

  /*
   * INLINE ELEMENTS - START
  */

  .prose :global(code) {
    font-size: 0.875rem;
  }

  .prose :global(h2 code),
  .prose :global(h3 code),
  .prose :global(h4 code),
  .prose :global(h5 code) {
    font-size: inherit;
    font-weight: inherit;
    color: inherit !important;
    filter: none !important;

    & :global(span) {
      color: inherit !important;
    }
  }

  /*
   * INLINE ELEMENTS - END
  */

  /* OTHERS */

  /* ol, ul */
  .prose :global(ol),
  .prose :global(ul) {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    list-style-type: none;

    & :global(li) {
      margin-top: 0.5em;
      margin-bottom: 0.5em;

      & :global(p:first-of-type) {
        margin-bottom: 0;
      }
    }
  }

  .prose :global(ul ol),
  .prose :global(ul ul),
  .prose :global(ol ul),
  .prose :global(ol ol) {
    margin-top: 0;
  }

  .prose :global(ol > li) {
    position: relative;
    padding-left: 2.1em;

    &::before {
      content: counter(list-item, decimal) '.';
      position: absolute;
      left: 7px;
      color: theme('colors.primary.DEFAULT');
    }
  }

  .prose :global(ul > li) {
    position: relative;
    padding-left: 2.1em;

    &::before {
      content: '>';
      position: absolute;
      top: -1px;
      left: 7px;
      font-size: 0.96rem;
      font-weight: 500;
      color: theme('colors.primary.DEFAULT');
    }
  }

  /* heading anchors */
  .prose :global(h2),
  .prose :global(h3) {
    position: relative;

    & > :global(a) {
      cursor: pointer;
      position: absolute;
      margin-left: -25px;
      padding-right: 4px;
      font-weight: 300;
      color: theme('colors.primary.DEFAULT');
      opacity: 0;
      box-shadow: none;

      &::after {
        content: '#';
      }

      @media (hover: hover) and (pointer: fine) {
        transition: opacity 0.2s;

        &:hover {
          color: theme('colors.primary.DEFAULT');
          box-shadow: none;
        }
      }
    }

    @media (hover: hover) and (pointer: fine) {
      &:hover > :global(a) {
        opacity: 1;
      }
    }
  }

  /* table */
  .prose :global(.table-wrap) {
    overflow-x: auto;

    &.center {
      display: flex;
      justify-content: center;
    }
  }

  .prose :global(table) {
    width: 100%;
    white-space: nowrap;
  }

  .prose :global(th) {
    padding: 0.625rem 1rem;
    padding-top: 0;
    font-weight: 500;
    color: theme('colors.text.bold');
    text-align: left;
    border-bottom: 2px solid theme('colors.bg.border');
  }

  .prose :global(td) {
    padding: 0.625rem 1rem;
    vertical-align: top;
  }

  .prose :global(tr:not(:last-of-type) td) {
    border-bottom: 1px solid theme('colors.bg.border');
  }

  .prose :global(th:not(:last-of-type)),
  .prose :global(td:not(:last-of-type)) {
    border-right: 1px dotted theme('colors.bg.border');
  }

  .prose :global(tr td) {
    border-bottom: 2px solid theme('colors.bg.border');
  }

  /* footnotes */
  .prose :global(a[data-footnote-ref]) {
    all: unset;
    cursor: pointer;
    font-weight: 500;
    color: theme('colors.primary.DEFAULT');

    &::before {
      content: '[';
    }

    &::after {
      content: ']';
    }
  }

  .prose :global(section[data-footnotes]) {
    margin-bottom: 2rem;

    & :global(a[data-footnote-backref]) {
      display: none;
    }

    & :global(ol) {
      counter-reset: item;

      & > :global(li) {
        counter-increment: item;
        display: flex;
        padding-left: 1rem;

        &::before {
          content: counter(item);
          margin-top: 1px;
          margin-right: 5px;
          font-size: 0.6rem;
          font-weight: 500;
        }

        & :global(p) {
          margin: 0;
        }
      }
    }
  }
</style>
