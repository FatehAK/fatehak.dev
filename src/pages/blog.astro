---
import PageLayout from 'layouts/PageLayout.astro';
import PageSEO from 'components/PageSEO.astro';
import Heading from 'components/Heading.astro';
import PostList from 'components/PostList.astro';
import { APP_CONFIG } from 'appConfig';

const posts = [
  {
    path: '',
    title: 'How to Save a JavaScript Function as a Bookmark',
    date: 'Jan 06, 2023',
    readingTime: '2 min read',
  },
  {
    path: '',
    title: 'Building an Alert Component in Svelte',
    date: 'Oct 20, 2022',
    readingTime: '5 min read',
  },
];
---

<PageLayout>
  <PageSEO title={`${APP_CONFIG.USER.name} | Blog`} slot="seo" />
  <Heading text="My" gradientText="Blog" />
  <PostList posts={posts} />
</PageLayout>
